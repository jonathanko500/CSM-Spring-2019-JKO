import java.util.*;

public class Testing
{

	public static void main(String[] args)
	{
		
		Random rand = new Random();
		Scanner scan = new Scanner(System.in);
		int PathOrWall1=rand.nextInt(2);
		int PathOrWall2 = 0;
		randNum(PathOrWall2);
		String ans = null;
		boolean pass=true;
		
		while(pass==true)
		{
			for(int i=0;i<4;i++)
			{
				System.out.println(PathOrWall2);
				randNum(PathOrWall2);
			}
			System.out.print("Cont: ");
			ans=scan.nextLine();
			if(ans.equalsIgnoreCase("n"))
			{
				pass=false;
			}
			else
			{
				PathOrWall2=rand.nextInt(2);
			}
		}
		

	}
	public static int randNum(int num)
	{
		Random rand = new Random();
		Scanner scan = new Scanner(System.in);
		double chance=rand.nextDouble();
		double prob;
		System.out.print("Chances: ");
		prob=Double.parseDouble(scan.nextLine());
		if(chance<prob)
		{
			num=1;
		}
		else
		{
			num=0;
		}
		return num;
	}

}
