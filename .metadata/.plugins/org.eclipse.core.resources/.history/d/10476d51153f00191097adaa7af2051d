
public class LeaveEvent extends Event
{//start
	private int groupSize;
	//constructor
	public LeaveEvent()
	{
		super();
		this.groupSize=0;
	}
	public LeaveEvent(int time ,int size)
	{
		super(time);
		this.groupSize=size;
	}
	//setter
	public void setGroupSize(int size)
	{
		this.groupSize=size;
	}
	//getter
	public int getGroupSize()
	{
		return groupSize;
	}
	//toString
	@Override
	public String toString()
	{
		String x="";
		x="The time is "+getTime()+" the gorup size is "+groupSize;
		return x;
	}
	//methods
	public void processEvent ()
	{ 
		leave(groupSize); 
	}
	public int leave(int x)
	{
		return 0;
	}
}//end 
